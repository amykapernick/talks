---
import Header from '@parts/header'
import Standard from '@slides/standard'
import Code from '@slides/code'
import Split from '@slides/split'
import Quote from '@slides/quote'
import Figure from '@slides/figure'
import Section from '@slides/section'
import Background from '@slides/background'

interface Props {
	type: 'standard' | 'code' | 'split' | 'quote' | 'figure' | 'section' | 'background'
	align?: 'left' | 'right'
	size?: 'small'
}

const { type = 'standard', size, align, ...props } = Astro.props

let Slide = Standard

switch(type) {
	case 'code':
		Slide = Code;
		break;
	case 'split':
		Slide = Split;
		break;
	case 'quote':
		Slide = Quote;
		break;
	case 'figure':
		Slide = Figure;
		break;
	case 'section':
		Slide = Section;
		break;
	case 'background':
		Slide = Background;
		break;
}

---

<style>
	
</style>

<Slide {...props} data-align={align} data-size={size}>
	<Header>
		<slot name="header" />
	</Header>
	<slot />
	<aside class="notes" data-markdown>
		<slot name="notes" />
	</aside>
</Slide>