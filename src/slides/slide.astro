---
import Header from '@parts/header'
import Standard from '@slides/standard'
import Code from '@slides/code'
import Split from '@slides/split'
import Quote from '@slides/quote'
import Figure from '@slides/figure'
import Section from '@slides/section'
import Background from '@slides/background'
import Browsers from '@slides/browsers'

type SlideType = 'standard' | 'code' | 'split' | 'quote' | 'figure' | 'section' | 'background' | 'browsers'

interface Props {
	type: SlideType;
	align?: 'left' | 'right';
	size?: 'small' | 'medium';
}

const { type = 'standard', size, align, ...props } = Astro.props

const SlideTypes: Record<SlideType, any> = {
	code: Code,
	split: Split,
	quote: Quote,
	figure: Figure,
	section: Section,
	background: Background,
	browsers: Browsers,
	standard: Standard
}

const SlideComponent = SlideTypes[type] || Standard

---

<style>
	
</style>

<SlideComponent {...props} data-align={align} data-size={size}>
	<Header>
		<slot name="header" />
	</Header>
	<slot />
	<aside class="notes" data-markdown>
		<slot name="notes" />
	</aside>
</SlideComponent>