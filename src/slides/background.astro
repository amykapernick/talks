---
import { Image } from 'astro:assets';

const { image, style, ...args } = Astro.props

---

<style>

	img {
		display: block;
		width: 100%;
		height: 100%;
		object-fit: cover;
		transform: translateY(calc(-1 * $header_height));

		&[data-style="light"] {
			filter: invert(100%) sepia(9%) saturate(29%) hue-rotate(156deg) brightness(113%) contrast(86%);
		}
	}
</style>

<section {...args}>
	<Image src={image} loading={'eager'} alt="" data-style={style} />
	<slot />
</section>