---
const { theme } = Astro.props
---

<style>
	@import '@mixins';

	div {
		&:not(:has(+ section.present)) {
			background: none;
		}

		@include full_background;

		background: $background;

		&[data-theme="dark"] {
			background: $neutral;
		}

		&[data-theme="blue_dark"] {
			background: $navy;
		}
	}
</style>

<div data-theme={theme}>

</div>